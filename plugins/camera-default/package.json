{
    "name": "@titan-reactor-plugins/camera-default",
    "version": "1.0.0",
    "description": "Default Camera Mode",
    "author": "Dark Matter",
    "keywords": [
        "titan-reactor-plugin"
    ],
    "peerDependencies": {
        "titan-reactor-api": "1.0.0"
    },
    "config": {
        "system": {
            "permissions": [
                "replay.commands"
            ]
        },
        "cameraModeKey": {
            "label": "Toggle Camera",
            "type": "keyboard-shortcut",
            "value": "Escape"
        },
        "defaultDistance": {
            "label": "Default Distance",
            "value": 80,
            "min": 40,
            "max": 100,
            "step": 1
        },
        "damping": {
            "label": "Movement Damping",
            "factor": 0.01,
            "value": 9,
            "min": 0,
            "max": 30,
            "step": 1
        },
        "edgeFriction": {
            "label": "Edge Friction",
            "value": 1,
            "min": 0,
            "max": 5,
            "step": 0.1
        },
        "dollyAmount": {
            "label": "Dolly",
            "folder": "Middle Mouse Scroll",
            "value": 12,
            "min": 1,
            "max": 30,
            "step": 1
        },
        "rotateAmount": {
            "label": "Rotate",
            "folder": "Middle Mouse Scroll",
            "value": 1,
            "min": 0,
            "max": 2,
            "step": 0.1
        },
        "screenDragSpeed": {
            "label": "Speed",
            "folder": "Screen Edge Movement",
            "value": 1,
            "min": 0,
            "max": 4,
            "step": 0.1
        },
        "screenDragAccel": {
            "label": "Acceleration",
            "folder": "Screen Edge Movement",
            "factor": 0.01,
            "value": 1,
            "min": 0,
            "max": 10,
            "step": 1
        },
        "screenDragAccelMax": {
            "label": "Max Acceleration",
            "folder": "Screen Edge Movement",
            "value": 2,
            "min": 0,
            "max": 4,
            "step": 0.1
        },
        "keyboardSpeed": {
            "label": "Speed",
            "folder": "Keyboard Movement",
            "value": 1,
            "min": 0,
            "max": 4,
            "step": 0.5
        },
        "keyboardAccel": {
            "label": "Acceleration",
            "folder": "Keyboard Movement",
            "factor": 0.01,
            "value": 1,
            "min": 0,
            "max": 10,
            "step": 1
        },
        "keyboardAccelMax": {
            "label": "Max Acceleration",
            "folder": "Keyboard Movement",
            "value": 2,
            "min": 0,
            "max": 4,
            "step": 0.1
        },
        "pipSize": {
            "label": "PIP Size",
            "value": 300,
            "min": 100,
            "max": 400,
            "step": 25
        }
    }
}