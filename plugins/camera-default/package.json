{
    "name": "@titan-reactor-plugins/camera-standard",
    "version": "2.0.4",
    "description": "Default Camera Mode",
    "author": "Dark Matter",
    "keywords": [
        "titan-reactor-plugin"
    ],
    "peerDependencies": {
        "titan-reactor-api": "2.0.0"
    },
    "config": {
        "system": {
            "permissions": [
                "replay.commands"
            ]
        },
        "defaultDistance": {
            "label": "Default Distance",
            "value": 55,
            "min": 40,
            "max": 80,
            "step": 1
        },
        "tilt": {
            "label": "Tilt",
            "min": 0,
            "max": 45,
            "step": 1,
            "value": 5
        },
        "camera": {
            "label": "Camera",
            "value": "perspective",
            "options": [
                "perspective",
                "orthographic"
            ]
        },
        "dollyAmount": {
            "label": "Dolly",
            "folder": "Middle Mouse Scroll",
            "value": 12,
            "min": 1,
            "max": 30,
            "step": 1
        },
        "rotateAmount": {
            "label": "Rotate",
            "folder": "Middle Mouse Scroll",
            "value": 1,
            "min": 0,
            "max": 2,
            "step": 0.1
        },
        "pipSize": {
            "label": "PIP Size",
            "value": 300,
            "min": 100,
            "max": 400,
            "step": 25
        }
    }
}
