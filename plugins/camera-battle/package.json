{
    "name": "@titan-reactor-plugins/camera-battle",
    "version": "2.1.0",
    "description": "360 Camera Controller",
    "author": "DM",
    "keywords": [
        "titan-reactor-plugin"
    ],
    "peerDependencies": {
        "@titan-reactor-runtime/host": "^2.2.0"
    },
    "config": {
        "controlScheme": {
            "label": "Primary Control Scheme",
            "value": "mouse",
            "options": [
                "mouse",
                "keyboard"
            ]
        },
        "sensitivity": {
            "label": "Input Sensitivity",
            "value": 5,
            "min": 1,
            "max": 25
        },
        "fov": {
            "folder": "Camera Parameters",
            "label": "Field Of View",
            "value": 85,
            "min": 35,
            "max": 125,
            "step": 1
        },
        "rotateSpeed": {
            "folder": "Camera Movement",
            "label": "Rotate Speed",
            "value": 0.1,
            "min": 0.1,
            "max": 5,
            "step": 0.1
        },
        "elevateAmount": {
            "folder": "Middle Mouse Scroll",
            "label": "Camera Movement",
            "value": 2.5,
            "min": 1,
            "max": 5,
            "step": 0.5
        },
        "rotateAzimuthStart": {
            "label": "Starting Azumuth Rotation",
            "folder": "Starting Position",
            "value": 1,
            "min": 0,
            "max": 2,
            "step": 0.1
        },
        "rotatePolarStart": {
            "label": "Starting Polar Rotation",
            "folder": "Starting Position",
            "value": 1.4,
            "min": 0,
            "max": 2,
            "step": 0.1
        },
        "defaultDistance": {
            "label": "Default Distance",
            "folder": "Starting Position",
            "value": 15,
            "min": 10,
            "max": 50,
            "step": 1
        },
        "keyboardSpeed": {
            "label": "Speed",
            "folder": "Keyboard Scheme",
            "value": 2,
            "min": 0,
            "max": 4,
            "step": 0.5
        },
        "keyboardAccel": {
            "label": "Acceleration",
            "folder": "Keyboard Scheme",
            "factor": 0.01,
            "value": 1,
            "min": 0,
            "max": 10,
            "step": 1
        },
        "keyboardAccelMax": {
            "label": "Max Acceleration",
            "folder": "Keyboard Scheme",
            "value": 2,
            "min": 0,
            "max": 4,
            "step": 0.1
        }
    }
}
