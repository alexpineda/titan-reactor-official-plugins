{
    "name": "@titan-reactor-plugins/production-bar",
    "version": "1.1.2",
    "description": "Production Bar",
    "author": "Dark Matter",
    "keywords": [
        "titan-reactor-plugin"
    ],
    "peerDependencies": {
        "titan-reactor-api": "2.0.0"
    },
    "config": {
        "backgroundColor": {
            "folder": "Style",
            "label": "Background",
            "value": "#00000099"
        },
        "orientation": {
            "folder": "Style",
            "label": "Orientation",
            "value": "vertical",
            "options": [
                "horizontal",
                "vertical"
            ]
        },
        "unitsFirst": {
            "folder": "Style",
            "label": "Units Ordered First",
            "value": "true"
        },
        "iconSize": {
            "folder": "Style",
            "label": "Icon Size",
            "factor": 8,
            "value": 5,
            "min": 2,
            "max": 8,
            "step": 1
        },
        "useCustomProgressColor": {
            "folder": "Style",
            "label": "Use custom progress color",
            "value": true
        },
        "customProgressColor": {
            "folder": "Style",
            "label": "Custom progress color",
            "value": "#868686"
        },
        "maxTotalItems": {
            "folder": "Style",
            "label": "Max Row Items",
            "value": 20,
            "min": 3,
            "max": 20,
            "step": 1
        },
        "maxUnits": {
            "folder": "Style",
            "label": "Max Units",
            "value": 0,
            "min": 0,
            "max": 20,
            "step": 1
        },
        "showUpgrades": {
            "folder": "Upgrades",
            "label": "Display Upgrades",
            "value": false
        },
        "showCompletedUpgrades": {
            "folder": "Upgrades",
            "label": "Display Completed Upgrades",
            "value": true
        },
        "showResearch": {
            "folder": "Research",
            "label": "Display Research",
            "value": false
        },
        "showCompletedResearch": {
            "folder": "Research",
            "label": "Display Completed Research",
            "value": true
        },
        "hideInitialResearch": {
            "folder": "Research",
            "label": "Hide starting research in UMS games",
            "value": true
        }
    }
}